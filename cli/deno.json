{
  "name": "@zachcp/mvs-cli",
  "version": "0.1.0",
  "description": "A command-line tool for creating and managing MolViewPack molecular visualization stories",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zachcp/mvs-cli.git"
  },
  "homepage": "https://github.com/zachcp/mvs-cli",
  "bugs": {
    "url": "https://github.com/zachcp/mvs-cli/issues"
  },
  "keywords": [
    "molecular-visualization",
    "cli",
    "molstar",
    "protein",
    "chemistry",
    "bioinformatics"
  ],
  "exports": {
    ".": "./mod.ts",
    "./cli": "./main.ts"
  },
  "bin": {
    "mvs": "./main.ts"
  },
  "tasks": {
    "dev": "deno run --watch main.ts",
    "build": "deno compile --allow-read --allow-write --allow-env --allow-net --output mvs main.ts",
    "test": "deno test --allow-read --allow-write --allow-env --allow-run --allow-net --allow-sys",
    "publish": "deno publish"
  },
  "imports": {
    "@std/assert": "jsr:@std/assert@1",
    "@std/yaml": "jsr:@std/yaml@1",
    "@std/fs": "jsr:@std/fs@1",
    "@std/path": "jsr:@std/path@1",
    "@std/cli": "jsr:@std/cli@^1.0.21",
    "@zachcp/molviewstory-types": "jsr:@zachcp/molviewstory-types@0.2.1"
  },
  "compilerOptions": {
    "strict": true
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 100,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": false,
    "proseWrap": "preserve"
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "nodeModulesDir": "auto",
  "publish": {
    "exclude": [
      ".git",
      ".gitignore",
      "node_modules",
      "*.log",
      "mvs",
      "src/templates/1fap.pdb",
      "examples/localfile/assets/*.pdb"
    ]
  }
}
